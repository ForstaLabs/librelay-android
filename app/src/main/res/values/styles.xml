<resources>

    <style name="Application.LightNoActionBar" parent="@style/TextSecure.LightNoActionBar">
        <item name="actionBarStyle">@style/Application.LightActionBar</item>
        <item name="actionBarTabBarStyle">@style/Application.LightActionBar.TabBar</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Application.LightTheme" parent="@style/TextSecure.LightTheme">
        <item name="actionBarStyle">@style/Application.LightActionBar</item>
        <item name="actionBarTabBarStyle">@style/Application.LightActionBar.TabBar</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Application.LightActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="elevation">2dp</item>
        <item name="logo">@drawable/actionbar_icon</item>
        <item name="icon">@drawable/actionbar_icon</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextStyle">@style/TextSecure.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/TextSecure.SubtitleTextStyle</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#BFffffff</item>
    </style>

    <style name="Application.LightActionBar.TabBar"
        parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="background">@color/colorPrimaryDark</item>
    </style>

</resources>
